---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navigation from "../../components/Navigation.astro";
import { getCollection } from "astro:content";


const blogPosts = await getCollection("blog");
---

<BaseLayout title="Blog | Mayke Jaspers">
    <Navigation />
    <main>
        <h1>All blog posts</h1>
        <div class="blog-overview-list">
            {
                blogPosts.map((post) => (
                    <a href={`/blog/${post.slug}`} class="blog-overview-card">
                        {post.data.image && (
                            <img
                                src={post.data.image}
                                alt={post.data.title}
                                class="blog-overview-img"
                            />
                        )}
                        <div class="blog-overview-title">{post.data.title}</div>
                        <div class="blog-overview-desc">
                            {post.data.description}
                        </div>
                    </a>
                ))
            }
        </div>
    </main>
</BaseLayout>
