---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";

const projectPreviews = [
	{
		title: "Digital Collage",
		tag: "Design",
		url: "/projects/digital-collage",
		image: "src/collection/graphicSkills01.png",
	},
	{
		title: "3D Portfolio",
		tag: "3D",
		url: "/projects/3d-portfolio",
		image: "src/collection/graphicSkills02.png",
	},
	{
		title: "Animation Demo",
		tag: "Animation",
		url: "/projects/animation-demo",
		image: "src/collection/Video01.mp4",
	},
];

const programs = [
	"Photoshop",
	"Figma",
	"Astro",
	"Blender",
	"Premiere Pro",
	"Illustrator",
	"After Effects",
];
---

<BaseLayout title="Home | Mayke Jaspers">
	<Navigation />
	<main class="home-main">
		<div class="hero-image">
			<img
				src="src/images/hero-image.png"
				alt="Your portrait"
				class="hero-img"
			/>
		</div>
		<section class="hero-content">
			<h1>
				CREATIVE<br />
				<span class="accent">PORTFOLIO</span>
			</h1>
			<p class="hero-desc">
				Welcome! Hi my name is mayke and here you can find all my
				digital projects and experiments below.
			</p>
			<a class="projects-link" href="/projects">
				View Projects
				<span class="scribble-underline"></span>
			</a>
			<div class="scribble-tags">
				<span class="scribble floating" style="top:2.5rem;left:8%;"
					>#Digital</span
				>
				<span class="scribble floating" style="top:3.5rem;right:12%;"
					>#Development</span
				>
				<span
					class="scribble floating"
					style="top:5.2rem;left:22%;animation-delay:.6s;"
					>#Video</span
				>
				<span
					class="scribble floating"
					style="top:6.1rem;right:17%;font-size:1.1rem;">#3D</span
				>
				<span
					class="scribble floating"
					style="top:7rem;left:11%;animation-delay:0.3s;"
					>#Animation</span
				>
				<span
					class="scribble floating"
					style="top:8.2rem;right:28%;font-size:1.05rem;"
					>#Design</span
				>
				<span
					class="scribble floating"
					style="top:1rem;right:10%;font-size:1.05rem;animation-delay:0.2s"
					>#Devine</span
				>
			</div>
		</section>

		<section class="marquee-section">
			<div class="marquee">
				<span
					>CREATIVE THINKING &nbsp; • &nbsp; CREATIVE THINKING &nbsp;
					• &nbsp; CREATIVE THINKING &nbsp; • &nbsp;
				</span>
				<span
					>CREATIVE THINKING &nbsp; • &nbsp; CREATIVE THINKING &nbsp;
					• &nbsp; CREATIVE THINKING &nbsp; • &nbsp;
				</span>
			</div>
		</section>

		<section class="projects-preview">
			<h2 class="projects-preview-title">Recent Projects</h2>
			<div class="projects-preview-list">
				{
					projectPreviews.map((project) => (
						<a href={project.url} class="project-preview-card">
							<img
								src={project.image}
								alt={project.title}
								class="project-preview-img"
								loading="lazy"
							/>
							<div class="project-preview-title" />
							<div class="project-preview-tag">{project.tag}</div>
						</a>
					))
				}
			</div>
		</section>

		<section class="programs-section">
			<h2 class="programs-title">Tools & programs i use</h2>
			<ul class="programs-list">
				{programs.map((name) => <li class="programs-item">{name}</li>)}
			</ul>
		</section>
	</main>
</BaseLayout>
