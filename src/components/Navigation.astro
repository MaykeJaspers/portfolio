---
const currentPath = Astro.url.pathname;
---

<nav class="nav">
    <a class="logo" href="/">PORTFOLIO</a>

    <button
        class="nav-toggle"
        aria-label="Open menu"
        onclick="document.querySelector('.nav-links').classList.toggle('open'); this.classList.toggle('active')"
    >
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </button>

    <div class="nav-links">
        <ul>
            <li>
                <a href="/" class={currentPath === "/" ? "active" : ""}>Home</a>
            </li>
            <li>
                <a
                    href="/about"
                    class={currentPath.startsWith("/about") ? "active" : ""}
                    >About</a>
            </li>
            <li>
                <a
                    href="/projects"
                    class={currentPath.startsWith("/projects") ? "active" : ""}
                    >Projects</a>
            </li>
            <li>
                <a
                    href="/blog"
                    class={currentPath.startsWith("/blog") ? "active" : ""}
                    >Blog</a>
            </li>
        </ul>
    </div>
</nav>
