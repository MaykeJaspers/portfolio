---
import "../styles/global.css";

interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>

        <meta
            name="description"
            content="Blog post on the portfolio of Mayke Jaspers"
        />

        <meta property="og:title" content={title} />
        <meta property="og:type" content="article" />

        <link rel="icon" type="image/png" href="/favicon.png" />
    </head>

    <body>
        <header>
            <slot name="header" />
        </header>

        <main class="blog-layout">
            <slot />
        </main>
    </body>
</html>

<style>
    body {
        background: #ffffff;
        color: #000000;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Inter",
            sans-serif;
    }

    .blog-layout {
        padding: 2.5rem 1.25rem 4rem;
        max-width: 1100px;
        margin: 0 auto;
    }

    .site-footer {
        text-align: center;
        padding: 2rem 0 3rem;
        font-size: 0.8rem;
        letter-spacing: 0.1em;
        opacity: 0.7;
    }
</style>
