---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
---

<BaseLayout title="About | Mayke Jaspers">
    <Navigation />

    <main class="about-page">
        <section class="about-hero">
            <div class="about-hero-inner">
                <header class="about-hero-header">
                    <h1 class="about-hero-title">ABOUT ME</h1>
                </header>

                <div class="about-hero-body">
                    <div class="about-hero-text">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing
                            elit. Quisque non convallis nulla. Nunc quis
                            bibendum mauris. Phasellus ac mi sit amet nibh
                            interdum tempor ut at purus.
                        </p>
                        <a href="/projects" class="about-hero-btn">READ MORE</a>
                    </div>

                    <div class="about-hero-photo-wrap">
                        <div class="about-hero-photo-bg"></div>
                        <img
                            src="/images/aboutme.png"
                            alt="Portrait of Mayke Jaspers"
                            class="about-hero-photo"
                        />
                    </div>
                </div>
            </div>
        </section>

        <section class="about-hero-slash"></section>
    </main>
</BaseLayout>
