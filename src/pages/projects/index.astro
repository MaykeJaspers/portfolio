---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navigation from "../../components/Navigation.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<BaseLayout title="Projects | Mayke Jaspers">
    <Navigation />
    <main class="projects-main">
        <h2>All <span class="accent">projects</span></h2>
        <div class="projects-overview-grid">
            {
                projects.map((project) => (
                    <a
                        href={`/projects/${project.slug}`}
                        class="project-grid-card"
                    >
                        {project.data.image && (
                            <img
                                src={project.data.image}
                                alt={project.data.title}
                                class="project-grid-img"
                            />
                        )}
                        <div class="project-card-titlebar">
                            <span class="project-grid-title">
                                {project.data.title}
                            </span>
                            {project.data.tag && (
                                <span class="project-grid-tag">
                                    {project.data.tag}
                                </span>
                            )}
                        </div>
                        <span class="project-arrow">â†’</span>
                    </a>
                ))
            }
        </div>
    </main>
</BaseLayout>
