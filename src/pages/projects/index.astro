---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navigation from "../../components/Navigation.astro";

const categories = [
  { label: "Visual Design", tag: "visual-design" },
  { label: "Motion", tag: "motion" },
  { label: "3D", tag: "3d" },
  { label: "Graphic Design", tag: "graphic-design" },
  { label: "Web", tag: "web" },
  { label: "Creative Code", tag: "creative-code" },
];
---

<BaseLayout title="Projects | Mayke Jaspers">
  <Navigation />

  <main class="projects-page">
    <section class="projects-grid-section">
      <div class="projects-grid">
        {
          categories.map((cat) => (
            <a href={`/projects/${cat.tag}`} class="projects-tile">
              <span class="projects-tile-label">{cat.label}</span>
            </a>
          ))
        }
      </div>
    </section>
  </main>
</BaseLayout>
